<Window x:Class="VerifonePaymentTerminal.UserPromptDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input" Height="150" Width="300"
        WindowStartupLocation="CenterOwner"
        xmlns:local="clr-namespace:VerifonePaymentTerminal"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow">
    
    <Grid Margin="10">

        <Grid.Resources>
            <BooleanToVisibilityConverter x:Key="booleanToVisibilityConverter1"/>
        </Grid.Resources>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <Label x:Name="promptLabel" Content="Label not set" Target="{Binding ElementName=promptInput}"/>
            <TextBox x:Name="promptInput" Visibility="{Binding IsEditable, RelativeSource={RelativeSource AncestorType=local:UserPromptDialog}, Mode=OneWay, Converter={StaticResource booleanToVisibilityConverter1}}"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="75" Margin="0,0,10,0" Click="Ok_Click" IsDefault="False"/>
            <Button Content="Cancel" Width="75" Click="Cancel_Click" IsCancel="True" IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>
