<Window x:Class="VerifonePaymentTerminal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VerifonePaymentTerminal"
        mc:Ignorable="d"
        Title="Verifone ECR Terminal" Height="800" Width="1100" WindowStartupLocation="CenterScreen">

    <Grid DataContext="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:MainWindow}}">

        <Grid.Resources>
            <local:DateTimeToStringConverter x:Key="dateTimeToStringConverter1"/>
            <local:TransactionTypeConverter x:Key="transactonTypeConverter1"/>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <Grid>

            <Grid.Resources>

                <Style TargetType="Button">
                    <Setter Property="Width" Value="80"/>
                    <Setter Property="Height" Value="26"/>
                    <Setter Property="Margin" Value="1.5"/>
                    <Setter Property="Content" Value="No label yet..."/>
                </Style>

                <Style TargetType="ToggleButton">
                    <Setter Property="Width" Value="80"/>
                    <Setter Property="Height" Value="26"/>
                    <Setter Property="Margin" Value="1.5"/>
                    <Setter Property="Content" Value="No label yet..."/>
                </Style>

                <Style x:Key="textBoxStyle1" TargetType="TextBox">
                    <Setter Property="IsReadOnly" Value="True"/>
                    <Setter Property="TextWrapping" Value="Wrap"/>
                </Style>

                <Style TargetType="TextBox">
                    <Setter Property="Height" Value="26"/>
                    <Setter Property="Margin" Value="1.5"/>
                </Style>

                <Style TargetType="CheckBox">
                    <Setter Property="Margin" Value="1.5"/>
                </Style>

                <Style TargetType="ListBox">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
                    <Setter Property="ItemTemplate">
                        <Setter.Value>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" TextWrapping="Wrap"/>
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>

            </Grid.Resources>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="0.6*"/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <GroupBox Header="Terminal">

                    <Grid>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <StackPanel>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>

                                        <Label Content="Port:" Target="{Binding ElementName=portNameInput}"/>
                                        <TextBox Grid.Column="1" Width="100" HorizontalAlignment="Left" VerticalContentAlignment="Center" x:Name="portNameInput" Text="{Binding PortName}" />
                                    </Grid>

                                    <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Bottom">
                                        <Button x:Name="disconnectCommand" Content="Disconnect" Click="disconnectCommand_Click"/>
                                        <Button x:Name="testTerminalReadyCommand" Content="Test ready" Click="testTerminalReadyCommand_Click"/>
                                        <Button x:Name="getStatusCommand" Content="Get status" Click="getStatusCommand_Click"/>
                                        <Button x:Name="getTCSMessageCommand" Content="Get TCS" Click="getTCSMessageCommand_Click"/>
                                        <Button x:Name="getTerminalVersionCommand" Content="Get version" Click="getTerminalVersionCommand_Click"/>
                                    </StackPanel>
                                </Grid>

                            </StackPanel>

                        </Grid>

                    </Grid>
                </GroupBox>

                <GroupBox Grid.Row="1" Header="Device control data" DataContext="{Binding DeviceStatus}">
                    <TextBox Text="{Binding Mode=OneWay}" Style="{DynamicResource textBoxStyle1}" VerticalScrollBarVisibility="Auto"/>
                </GroupBox>

                <GroupBox Grid.Row="2" Header="Trace">
                    <ListBox ScrollViewer.HorizontalScrollBarVisibility="Disabled" ItemsSource="{Binding PortTraceMessages}"/>
                </GroupBox>

                <GroupBox Grid.Row="3" Header="Transaction status">
                    <ListBox ItemsSource="{Binding TransactionStatusMessages, Mode=OneWay}"/>
                </GroupBox>

            </Grid>

            <Grid Grid.Column="1">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <StackPanel>

                    <GroupBox Header="Payment">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Text="{Binding PaymentAmount}"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button x:Name="refundPaymentCommand" Content="Refund" Click="refundPaymentCommand_Click"/>
                                <Button x:Name="runPaymentCommand" Content="Pay" Click="runPaymentCommand_Click"/>
                            </StackPanel>
                        </Grid>
                    </GroupBox>

                    <GroupBox Header="Bonus">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <CheckBox Content="Bonus handled" IsChecked="{Binding IsBonusHandled}"/>
                                <CheckBox Content="Autoreply" IsChecked="{Binding IsBonusAutoReply}"/>
                                <CheckBox Content="Stop active" IsChecked="{Binding IsBonusStopActive}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Button x:Name="activateCustomerCardModeCommand" Content="Activate bonus" Click="activateCustomerCardModeCommand_Click"/>
                                <Button x:Name="deactivateCustomerCardModeCommand" Content="Deactivate bonus" Click="deactivateCustomerCardModeCommand_Click"/>
                                <Button x:Name="sendCustomerRequestCommand" Content="Read Bonus" Click="sendCustomerRequestCommand_Click"/>
                            </StackPanel>

                            <GroupBox Header="Last bonus info">
                                <TextBox Text="{Binding LastBonusText}" IsReadOnly="True"/>
                            </GroupBox>

                        </StackPanel>
                    </GroupBox>

                    <GroupBox Header="Transaction">
                        <Grid>

                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <StackPanel>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1.2*"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel>
                                        <Label Content="Transaction Date"/>
                                        <TextBox x:Name="transactionDateInput" Text="{Binding TransactionDateTime, Converter={StaticResource dateTimeToStringConverter1}}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1">
                                        <Label Content="Transaction ID" Target="{Binding ElementName=transactionIdInput}"/>
                                        <TextBox x:Name="transactionIdInput" Text="{Binding TransactionId}"/>
                                    </StackPanel>
                                </Grid>

                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Orientation="Horizontal">
                                        <Button x:Name="reverseTransactionCommand" Content="Reverse" Click="reverseTransactionCommand_Click"/>
                                        <Button x:Name="retrieveTransactionCommand" Content="Retrive" Click="retrieveTransactionCommand_Click"/>
                                        <Button x:Name="abortTransactionCommand" Content="Abort transaction" Click="abortTransactionCommand_Click"/>
                                    </StackPanel>

                                    <GroupBox Grid.Column="1" Header="Auxiliary transaction">
                                        <StackPanel Orientation="Horizontal">
                                            <ToggleButton x:Name="setAuxiliaryAcceptModeCommand" Content="AxA" Checked="setAuxiliaryAcceptModeCommand_Checked" Unchecked="setAuxiliaryAcceptModeCommand_Unchecked"/>
                                            <Button x:Name="acceptTransactionCommand" Content="Accept Axa" IsEnabled="{Binding IsChecked, ElementName=setAuxiliaryAcceptModeCommand}" Click="acceptTransactionCommand_Click"/>

                                            <StackPanel>
                                                <CheckBox Content="AxA decline" IsChecked="{Binding IsDeclineTransaction}"/>
                                                <CheckBox Content="AxA auto" IsChecked="{Binding IsAuxiliaryAuto}"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </GroupBox>
                                </Grid>

                            </StackPanel>

                            <GroupBox Grid.Row="1" Header="Transaction files">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition Height="100"/>
                                    </Grid.RowDefinitions>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Label Content="Dir:" Target="{Binding ElementName=dataDirectory}"/>
                                        <TextBox Grid.Column="1" x:Name="dataDirectory" Text="{Binding DataDirectory}" TextWrapping="Wrap"/>
                                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                                            <Button x:Name="loadTransactionsCommand" Content="Load" Click="loadTransactionsCommand_Click"/>
                                            <Button x:Name="deleteTransactionsCommand" Content="Delete" Click="deleteTransactionsCommand_Click"/>
                                        </StackPanel>
                                    </Grid>

                                    <ListBox Grid.Row="1" x:Name="transactionsSelector" Margin="0,5,0,0" ItemsSource="{Binding Transactions}" SelectedItem="{Binding SelectedTransaction}" SelectionMode="Extended" SelectionChanged="transactionsSelector_SelectionChanged">
                                        <ListBox.Resources>
                                            <Style TargetType="TextBox">
                                                <Setter Property="IsReadOnly" Value="True"/>
                                                <Setter Property="Margin" Value="1.5"/>
                                            </Style>
                                        </ListBox.Resources>
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition/>
                                                        <ColumnDefinition/>
                                                        <ColumnDefinition/>
                                                        <ColumnDefinition/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Text="{Binding TransactionInfo.TransactionDateTime}"/>
                                                    <TextBlock Grid.Column="1" Text="{Binding TransactionInfo.TransactionId}"/>
                                                    <TextBlock Grid.Column="2" Text="{Binding TransactionInfo.TransactionType, Converter={StaticResource transactonTypeConverter1}}"/>
                                                    <TextBlock Grid.Column="3" Text="{Binding TransactionInfo.Amount, StringFormat=C}"/>

                                                </Grid>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>

                                </Grid>
                            </GroupBox>
                        </Grid>
                    </GroupBox>

                </StackPanel>

                <Grid Grid.Row="1">

                    <Grid.RowDefinitions>
                        <RowDefinition MinHeight="100"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <GroupBox Header="Last payer and payee receipt text">
                        <GroupBox.Resources>
                            <Style TargetType="TextBox">
                                <Setter Property="IsReadOnly" Value="True"/>
                                <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
                            </Style>
                        </GroupBox.Resources>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <TextBox Text="{Binding LastPayerReceiptText}"/>
                            <TextBox Grid.Column="1" Text="{Binding LastPayeeReceiptText}"/>
                        </Grid>
                    </GroupBox>

                    <GroupBox Grid.Row="1" Header="Display Text">

                        <Grid>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel>
                                <TextBox Text="{Binding DisplayText1}"/>
                                <TextBox Text="{Binding DisplayText2}"/>

                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <Button x:Name="clearDisplayCommand" Content="Clear" Click="clearDisplayCommand_Click" />
                                <Button x:Name="displayTextCommand" Content="Display text" Click="displayTextCommand_Click"/>
                                <CheckBox Content="Big font" IsChecked="{Binding IsDisplayTextBigFont}"/>
                            </StackPanel>

                        </Grid>

                    </GroupBox>
                </Grid>
            </Grid>
        </Grid>
    </Grid>

</Window>
